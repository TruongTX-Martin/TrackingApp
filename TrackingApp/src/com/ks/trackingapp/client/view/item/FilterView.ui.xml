<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:com.ks.trackingapp.client.view">
	<ui:style>
		.important {
		font-weight: bold;
		}

		.flowMain {
		width: 100%;
		}

		.flowPlatform {
		width:100%;
		display: inline-block;
		margin-top: 14px;
		margin-left: 9px;
		}

		.htmlPlatform {
		color: #ffffff;
		font-size: 15px;
		font-weight: bold;
		}

		.flowImage {
		width: 30%;
		display: inline-block;
		padding-top: 10px;
		padding-bottom: 10px;
		vertical-align: middle;
		padding-right: 5px;
		padding-left:
		5px;
		}
	</ui:style>
	<f:VerticalTouchPanel ui:field="touchPanel" width="100%"
		height="50px">
		<g:FlowPanel styleName="{style.flowMain}">
			<!-- <g:FlowPanel styleName="{style.flowImage}" ui:field="flowImage"> 
				</g:FlowPanel> -->
			<g:FlowPanel styleName="{style.flowPlatform}">
				<g:HTML styleName="{style.htmlPlatform}" ui:field="htmlFilter">
				</g:HTML>
			</g:FlowPanel>
		</g:FlowPanel>
	</f:VerticalTouchPanel>


</ui:UiBinder> 