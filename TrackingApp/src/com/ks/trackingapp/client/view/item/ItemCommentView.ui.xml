<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.flowTitle {
		width: 100%;
	}
	
	.flowAppname {
		width: 40%;
		display: inline-block;;
	}
	
	.htmlAppname {
		color: #ffffff;
		font-size: 17px;
		font-weight: bold;
		margin-left: 10px;
	}
	
	.flowDate {
		width: 30%;
		display: inline-block;
	}
	
	.htmlDate {
		color: #ffffff;
		font-size: 15px;
	}
	
	.flowPlatform {
		width: 30%;
		display: inline-block;;
	}
	
	.htmlPlatform {
		color: #ffffff;
		font-size: 15px;
		float: right;
		margin-right: 10px;
	}
	
	.flowRating {
		margin-left: 10px;
	}
	
	.flowComment {
		
	}
	
	.htmlComment {
		color: #ffffff;
		font-size: 14px;
		margin-left: 10px;
	}
	.lineSeparator{
	width: 100%;
	height: 1px;
	background-color: #ffffff;
}
	</ui:style>

	<g:FlowPanel>
		<g:FlowPanel styleName="{style.flowTitle}">
			<g:FlowPanel styleName="{style.flowAppname}">
				<g:HTML styleName="{style.htmlAppname}" ui:field="htmlAppname"></g:HTML>
			</g:FlowPanel>
			<g:FlowPanel styleName="{style.flowDate}">
				<g:HTML styleName="{style.htmlDate}" ui:field="htmlDate"></g:HTML>
			</g:FlowPanel>
			<g:FlowPanel styleName="{style.flowPlatform}">
				<g:HTML styleName="{style.htmlPlatform}" ui:field="htmlPlatform"></g:HTML>
			</g:FlowPanel>
		</g:FlowPanel>
		<g:FlowPanel ui:field="flowRating" styleName="{style.flowRating}"></g:FlowPanel>
		<g:FlowPanel styleName="{style.flowComment}">
			<g:HTML styleName="{style.htmlComment}" ui:field="htmlComment"></g:HTML>
		</g:FlowPanel>
		<g:FlowPanel styleName="{style.lineSeparator}" />
	</g:FlowPanel>

</ui:UiBinder> 