<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:v="urn:import:com.ks.trackingapp.client.view">
	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.flowMain {
		width: 100%;
	}
	
	.flowIcon {
		width: 20%;
		display: inline-block;		
	}
	
	.imgIcon {
		padding: 5px;
	}
	
	.flowTitle {
		width: 60%;
		display: inline-block;
	}
	
	.htmlTitle {
		color: #ffffff;
		font-size: 0.7em;
	}
	
	.flowExtend {
		width: 20%;
		display: inline-block;
		vertical-align: middle;
	}
	
	.imgExtend {
		float: right;
	}
	.flowSeparate{
		width: 100%;
		height: 0.5px;
		background-color: #ffffff;
	}
	</ui:style>

	<v:VerticalTouchPanel ui:field="touchPanel" width="100%">
		<g:FlowPanel ui:field="flowMain" styleName="{style.flowMain}">
			<g:FlowPanel ui:field="flowIcon" styleName="{style.flowIcon}">
				<g:Image ui:field="imgIcon" styleName="{style.imgIcon}"></g:Image>
			</g:FlowPanel>
			<g:FlowPanel ui:field="flowTitle" styleName="{style.flowTitle}">
				<g:HTML ui:field="htmlTitle" styleName="{style.htmlTitle}"></g:HTML>
			</g:FlowPanel>
			<g:FlowPanel ui:field="flowExtend" styleName="{style.flowExtend}">
				<g:Image ui:field="imgExtend" styleName="{style.imgExtend}"></g:Image>
			</g:FlowPanel>
			<g:FlowPanel styleName="{style.flowSeparate}"/>
		</g:FlowPanel>
	</v:VerticalTouchPanel>


</ui:UiBinder> 