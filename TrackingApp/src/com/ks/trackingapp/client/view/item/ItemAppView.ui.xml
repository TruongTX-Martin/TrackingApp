<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:com.ks.trackingapp.client.view.item" xmlns:v="urn:import:com.ks.trackingapp.client.view">
	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.panelAppname {
		width: 100%;
	}
	
	.htmlAppName {
		color: #ffffff;
		font-size: 17px;
		margin-left: 10px;
		margin-top: 5px;
		font-weight: bold;
	}
	
	.panelAndroid {
		width: 100%;
	}
	
	.panelAndroidApp {
		display: inline-block;
		width: 35%;
	}
	
	.htmlAndroid {
		color: #ffffff;
		font-size: 15px;
		margin-left: 10px;
		margin-top: 5px;
	}
	
	.panelAndroidRating {
		display: inline-block;
		width: 45%
	}
	
	.panelIOS {
		width: 100%;
	}
	
	.panelIOSApp {
		display: inline-block;
		width: 35%;
	}
	
	.htmlIOS {
		color: #ffffff;
		font-size: 15px;
		margin-left: 10px;
		margin-top: 5px;
	}
	
	.panelIOSRating {
		display: inline-block;
		width: 45%;
	}
	
	.flowseparator {
		width: 100%;
		height: 1px;
		background-color: #ffffff;
	}
	.panelIOSRate{
		display: inline-block;
		width: 20%;
	}
	.htmlIOSRate{
		color: #ffffff;
		font-size: 15px;
		text-align: center;
}
	</ui:style>


	<v:VerticalTouchPanel ui:field="mainPanel" width="100%">
		<g:FlowPanel ui:field="panelMain">
			<g:FlowPanel ui:field="panelAppname" styleName="{style.panelAppname}">
				<g:HTML ui:field="htmlAppName" styleName="{style.htmlAppName}">AppName</g:HTML>
			</g:FlowPanel>
	
			<g:FlowPanel ui:field="panelAndroid" styleName="{style.panelAndroid}">
				<g:FlowPanel ui:field="panelAndroidApp" styleName="{style.panelAndroidApp}">
					<g:HTML ui:field="htmlAndroid" styleName="{style.htmlAndroid}">Android</g:HTML>
				</g:FlowPanel>
				<g:FlowPanel ui:field="panelAndroidRating" styleName="{style.panelAndroidRating}">
				</g:FlowPanel>
				<g:FlowPanel ui:field="panelAndroidRate" styleName="{style.panelIOSRate}">
					<g:HTML ui:field="htmlAndroidRate" styleName="{style.htmlIOSRate}"></g:HTML>
				</g:FlowPanel>
			</g:FlowPanel>
	
			<g:FlowPanel ui:field="panelIOS" styleName="{style.panelIOS}">
				<g:FlowPanel ui:field="panelIOSApp" styleName="{style.panelIOSApp}">
					<g:HTML ui:field="htmlIOS" styleName="{style.htmlIOS}">IOS</g:HTML>
				</g:FlowPanel>
				<g:FlowPanel ui:field="panelIOSRating" styleName="{style.panelIOSRating}">
				</g:FlowPanel>
				<g:FlowPanel ui:field="panelIOSRate" styleName="{style.panelIOSRate}">
					<g:HTML ui:field="htmlIOSRate" styleName="{style.htmlIOSRate}"></g:HTML>
				</g:FlowPanel>
			</g:FlowPanel>
			<g:FlowPanel styleName="{style.flowseparator}" />
		</g:FlowPanel>
	</v:VerticalTouchPanel>
</ui:UiBinder> 