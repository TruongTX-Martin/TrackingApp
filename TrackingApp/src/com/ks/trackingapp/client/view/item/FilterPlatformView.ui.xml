<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:com.ks.trackingapp.client.view"
	>
	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.flowMain {
		width: 100%;
	}
	
	.flowPlatform {
		width: 60%;
		display: inline-block;;
	}
	
	.htmlPlatform {
		color: #ffffff;
		font-size: 15px;
		font-weight: bold;
	}
	
	.flowImage {
		width: 40%;
		display: inline-block;
		padding-right: 5px;
	}
	</ui:style>
	<f:VerticalTouchPanel ui:field="panelMail" width="100%">
		<g:FlowPanel styleName="{style.flowMain}">
			<g:FlowPanel styleName="{style.flowPlatform}">
				<g:HTML styleName="{style.htmlPlatform}" ui:field="htmlPlatform">
				</g:HTML>
			</g:FlowPanel>
			<g:FlowPanel styleName="{style.flowImage}" ui:field="flowImage">
			</g:FlowPanel>
		</g:FlowPanel>
	</f:VerticalTouchPanel>


</ui:UiBinder> 