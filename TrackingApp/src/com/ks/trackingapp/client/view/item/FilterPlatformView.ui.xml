<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:com.ks.trackingapp.client.view"
	>
	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.flowMain {
		width: 100%;
	}
	
	.flowPlatform {
		width:50%;
		display: inline-block;;
	}
	
	.htmlPlatform {
		color: #ffffff;
		font-size: 15px;
		font-weight: bold;
	}
	
	.flowImage {
		width: 50%;
		display: inline-block;
		padding-right: 5px;
		padding-left: 5px;
	}
	</ui:style>
	
		<g:FlowPanel styleName="{style.flowMain}">
			<g:FlowPanel styleName="{style.flowPlatform}">
				<f:VerticalTouchPanel ui:field="touchPlatform" width="100%">
					<g:HTML styleName="{style.htmlPlatform}" ui:field="htmlPlatform">
					</g:HTML>
				</f:VerticalTouchPanel>
			</g:FlowPanel>
			<g:FlowPanel styleName="{style.flowImage}" ui:field="flowImage">
				<f:VerticalTouchPanel ui:field="touchLanguage" width="100%">
					<g:HTML styleName="{style.htmlPlatform}" ui:field="htmlLanguage">
					</g:HTML>
				</f:VerticalTouchPanel>
			</g:FlowPanel>
		</g:FlowPanel>
	


</ui:UiBinder> 