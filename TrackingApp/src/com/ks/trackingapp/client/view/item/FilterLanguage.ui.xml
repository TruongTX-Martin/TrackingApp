<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:com.ks.trackingapp.client.view">
	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.flowMain {
		width: 100%;
		vertical-align: middle;
		text-align: center;
		padding-top: 6px;
	}
	
	.flowPlatform {
		display: inline-block;
		width: 100%;
		vertical-align: middle;
	}
	
	.htmlPlatform {
		color: #ffffff;
		font-size: 15px;
		font-weight: bold;
		float: right;
		margin-top: 7px;
    	margin-right: 10px;
	}
	
	.flowImage {
		display: inline-block;
		width: 30%;
		padding-right: 5px;
		padding-left: 5px;
		vertical-align: middle;
	}
	</ui:style>
	<f:VerticalTouchPanel ui:field="touchPanel" width="100%"
		height="50px">
		<g:FlowPanel styleName="{style.flowMain}" height="50px">
			<g:FlowPanel styleName="{style.flowPlatform}">
				<g:HTML styleName="{style.htmlPlatform}" ui:field="htmlFilter">
				</g:HTML>
			</g:FlowPanel>
			<!-- <g:FlowPanel styleName="{style.flowImage}" ui:field="flowImage">
			</g:FlowPanel> -->
		</g:FlowPanel>
	</f:VerticalTouchPanel>


</ui:UiBinder> 