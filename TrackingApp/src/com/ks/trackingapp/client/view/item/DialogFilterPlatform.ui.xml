<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:v="urn:import:com.ks.trackingapp.client.view">
	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.mailPanel {
		width: 200px;
		height: 150px;
		vertical-align: middle;
		background-color: #2B444B;
		border: 1px solid #ffffff;
	}
	
	.flowAll {
		width: 100%;
	}
	
	.htmlAll {
		color: #ffffff;
		font-size: 15px;
		font-weight: bold;
		margin-left: 10px;
		margin-top: 13px;
		margin-bottom: 13px;
	}
	
	.flowAndroid {
		width: 100%;
	}
	
	.htmlAndroid {
		color: #ffffff;
		font-size: 15px;
		font-weight: bold;
		margin-left: 10px;
		margin-top: 13px;
		margin-bottom: 13px;
	}
	
	.flowIOS {
		width: 100%;
	}
	
	.htmlIOS {
		color: #ffffff;
		font-size: 15px;
		font-weight: bold;
		margin-left: 10px;
		margin-top: 13px;
		margin-bottom: 13px;
	}
	
	.flowsaparator {
		width: 100%;
		height: 1px;
		background-color: #ffffff;
	}
	</ui:style>


	<g:FlowPanel styleName="{style.mailPanel}">
		<v:VerticalTouchPanel ui:field="touchAll" width="100%">
			<g:FlowPanel styleName="{style.flowAll}">
				<g:HTML styleName="{style.htmlAll}">All</g:HTML>
			</g:FlowPanel>
		</v:VerticalTouchPanel>
		<g:FlowPanel styleName="{style.flowsaparator}" />
		<v:VerticalTouchPanel ui:field="touchAndroid" width="100%">
			<g:FlowPanel styleName="{style.flowAndroid}">
				<g:HTML styleName="{style.htmlAndroid}">Android</g:HTML>
			</g:FlowPanel>
		</v:VerticalTouchPanel>
		<g:FlowPanel styleName="{style.flowsaparator}" />
		<v:VerticalTouchPanel ui:field="touchIOS" width="100%">
			<g:FlowPanel styleName="{style.flowIOS}">
				<g:HTML styleName="{style.htmlIOS}">IOS</g:HTML>
			</g:FlowPanel>
		</v:VerticalTouchPanel>
	</g:FlowPanel>

</ui:UiBinder> 