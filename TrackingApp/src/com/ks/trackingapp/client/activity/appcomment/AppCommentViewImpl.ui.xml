<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gwtbootstrap3="urn:import:org.gwtbootstrap3.client.ui" xmlns:s="urn:import:com.googlecode.mgwt.ui.client.widget.panel.scroll">
	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.homeView {
		background-color: #2B444B;
	}
	
	.panelSearch {
		background-color: #2B444B;
		margin-left: 10px;
		margin-right: 10px;
		padding-top: 10px;
	}
	
	.scrollPanel {
		background-color: #2B444B;
	}
	
	.textbox {
		width: 100%;
		height: 45px;
	}
	</ui:style>


	<g:FlowPanel styleName="{style.homeView}" width="100%"
		ui:field="pagePanel">
		<g:FlowPanel styleName="{style.panelSearch}">
			<gwtbootstrap3:TextBox ui:field="textbox"
				placeholder="Comment" styleName="{style.textbox}"></gwtbootstrap3:TextBox>
		</g:FlowPanel>
		<s:ScrollPanel ui:field="scrollPanel" styleName="{style.scrollPanel}">
			<g:FlowPanel width="100%" ui:field="panelComment">
			</g:FlowPanel>
		</s:ScrollPanel>
	</g:FlowPanel>

</ui:UiBinder> 