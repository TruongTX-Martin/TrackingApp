<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:com.googlecode.mgwt.ui.client.widget.panel.flex"
	xmlns:s="urn:import:com.googlecode.mgwt.ui.client.widget.panel.scroll"
	xmlns:b="urn:import:com.googlecode.mgwt.ui.client.widget.buttonbar"
	xmlns:v="urn:import:com.ks.trackingapp.client.view"
	xmlns:gwtbootstrap3="urn:import:org.gwtbootstrap3.client.ui"
	>
	<ui:style>
	.mainPanel {
	}
	.buttonMenuTop{
		padding-left: 10px !important;
		padding-right: 10px !important;
		padding-top: 20px !important;
   		padding-bottom: 20px !important;
    	background-color: transparent;
		color: white;  
	}
	.headerPanel{
		width: 100%;
		background-color: #404042;
		margin: 0px auto;
		height: 60px;
	}
	.centerPanel{
		display: inline-block;
		width: 100%;
		height: 100%;
		border-left: 1px solid black;
	}
	</ui:style>
	<g:HTMLPanel ui:field="mainPanel" addStyleNames="{style.mainPanel}"
		width="100%">
		<g:HTMLPanel  ui:field="headerPanel" addStyleNames="{style.headerPanel}">
	    		<div class="navbar-header">
				      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>                        
				      </button>
				</div>
	    	    <div class="collapse navbar-collapse btnMenu" id="myNavbar">
			      <ul class="nav navbar-nav navbar-left menuBtn">
			        <li><gwtbootstrap3:AnchorButton  ui:field="tabApps" addStyleNames="{style.buttonMenuTop}">Your Apps</gwtbootstrap3:AnchorButton></li>
			        <li><gwtbootstrap3:AnchorButton  ui:field="tabComment" addStyleNames="{style.buttonMenuTop}">Your app's comment</gwtbootstrap3:AnchorButton></li>
			      </ul>
			    </div>
	    	</g:HTMLPanel>  
	    	  
			<s:ScrollPanel scrollingEnabledX="false" ui:field="scrollPanel"
				width="100%" showScrollBarX="false" showScrollBarY="false">
				<g:FlowPanel ui:field="centerPanel" addStyleNames="{style.centerPanel}"></g:FlowPanel>
			</s:ScrollPanel>
	</g:HTMLPanel>
</ui:UiBinder> 