<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:v="urn:import:com.ks.trackingapp.client.view"
	xmlns:f="urn:import:com.googlecode.mgwt.ui.client.widget.panel.flex"
	xmlns:s="urn:import:com.googlecode.mgwt.ui.client.widget.panel.scroll"
	xmlns:b="urn:import:com.googlecode.mgwt.ui.client.widget.buttonbar" xmlns:button="urn:import:com.googlecode.mgwt.ui.client.widget.button">
	<ui:style>
	.mainPanel {
		background-repeat: repeat;
		border: none !important;
		font-size: 1.1em;
	}
	.buttonBar {
		background-color: #f1f1f1 !important;
	}
	.btnMenu {
		background-color: #D40069 ;
		text-align: center;
    	line-height: 4;
	}
	.headerPanel {
		background-color: #152727 !important;
	}
	.btnHome{
	cursor: pointer;
}
	</ui:style>
	<f:RootFlexPanel ui:field="mainPanel" addStyleNames="{style.mainPanel}" width="100%">
		<v:BhHeaderPanel ui:field="headerPanel" addStyleNames="{style.headerPanel}"></v:BhHeaderPanel>
		<s:ScrollPanel scrollingEnabledX="false" ui:field="scrollPanel" width="100%" showScrollBarX="false" showScrollBarY="false">
		</s:ScrollPanel>
	</f:RootFlexPanel>
</ui:UiBinder> 