<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:com.googlecode.mgwt.ui.client.widget.panel.flex">
	<ui:style>
		.important {
		font-weight: bold;
		}
		.mainPanel {
		background-repeat: repeat;
		border: none !important;
		font-size: 1.1em;
		}
		.mainPanel{
		width: 100%;
		height: 100%;
	}
	</ui:style>

	<g:FlowPanel styleName="{style.mainPanel}" ui:field="mainPanel">	
		<g:HTML>PullToRefreshView</g:HTML>
	</g:FlowPanel>
</ui:UiBinder> 